<h2>Posts</h2>
{{link-to "New post" "posts.new"}}

<dl>
  {{#each model as |post|}}
    <dt>
      {{#link-to "posts.show" post}}
      {{post.title}}
      {{/link-to}}
    </dt>
    <dd>
      <a href="#" {{action "deletePost" post}}>Delete</a>
      {{link-to "Edit" "posts.edit" post}}
    </dd>
  {{/each}}

</dl>
